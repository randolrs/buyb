<div class="full-screen-popover brand-gradient-background">

	<a href="<%= root_path %>"><span class="glyphicon glyphicon-arrow-left return-button" aria-hidden="true"></span></a>

	<h1 class="centered white-text">thatHQ</h1>

	<br>

	<div class="signup-form-container">

		<div class="signup-form-container-header">
		
			<h2>Login</h2>

		</div>

		<div class="form-content signup-form-container-inputs">

			<p>Enter your login credentials</p>

			<br>

			<%= form_for(:user, :url => session_path(:user)) do |f| %>

				<div class="field">
			  
				  <%= f.email_field :email, autofocus: true, placeholder: "Email", :required => true %>
				</div>

				<div class="field">
				 
				  <%= f.password_field :password, autocomplete: "off", placeholder: "Password", required: true, :required => true %>
				</div>

				<div class="actions">
				  <%= f.submit "Login", class: "button medium orange-background" %>
				</div>

			<% end %>

		</div>

		<div class="signup-form-container-actions centered">
		
			<p>Don't Have an Account? <%= link_to "Signup", signup_path %></p>

		</div>

	</div>

</div>

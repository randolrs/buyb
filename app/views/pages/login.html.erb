
<div class="content medium">

	<h1 class="underlined-header">Login</h1>

	<div class="form-content">

		<%= form_for(:user, :url => session_path(:user)) do |f| %>

			<div class="field">
			  <label>Email</label>
			  <br>
			  <%= f.email_field :email, autofocus: true, placeholder: "Email", :required => true %>
			</div>

			<div class="field">
			  <label>Password</label>
			  <br>
			  <%= f.password_field :password, autocomplete: "off", placeholder: "Password", required: true, :required => true %>
			</div>

			<div class="actions">
			  <%= f.submit "Login", class: "button medium brand-blue-background" %>
			</div>

		<% end %>

	</div>

</div>

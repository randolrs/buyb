<div class="full-screen-popover brand-gradient-background">

	<a href="<%= root_path %>"><span class="glyphicon glyphicon-arrow-left return-button full-screen-only" aria-hidden="true"></span></a>
	
	<div class="full-screen-header centered">
		<h1 class="centered white-text">thatHQ</h1>
	</div>

	<br>

	<div class="full-screen-content-container">

		<div class="signup-form-container">

			<div class="signup-form-container-header">
			
				<h2>Get Started</h2>

				<h4>Free Lifetime Access</h4>

			</div>

			<div class="form-content signup-form-container-inputs">

				<p>Choose your login credentials</p>

				<br>

				<%= form_for(:user, :url => registration_path(:user)) do |f| %>

					<div class="field">

						<%= f.email_field :email, autofocus: true, placeholder: "Email", :required => true %>

					</div>

					<div class="field">
						
						<%= f.password_field :password, autocomplete: "off", placeholder: "Password", required: true, :required => true %>

					</div>

					<div class="actions">
					  <%= f.submit "Signup", class: "button medium orange-background" %>
					</div>

				<% end %>

			</div>

			<div class="signup-form-container-actions centered">
			
				<p>Already Have an Account? <%= link_to "Login", login_path %></p>

			</div>

		</div>

	</div>

</div>

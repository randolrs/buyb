<%= render 'layouts/sidebar' %>

<%= render 'layouts/content_header', offer_category: @offer_category  %>

<%= render 'pages/offer_categories_header' %>


<div class="main-content">

	<section>

		<header>Top Recommendations</header>

		<a href="<%= offer_category_type_index_path(@offer_category.url_slug, "top") %>" class="see-all-cta <%= @offer_category.url_slug %>">See All</a>

		<br>

		<%= render 'offers/index_table', offers: @offer_category.top_offers.where(:active => true).take(4) %>

	</section>
	
	<br>

	<section>

		<header>Latest Recommendations</header>

		<a href="<%= offer_category_type_index_path(@offer_category.url_slug, "newest") %>" class="see-all-cta <%= @offer_category.url_slug %>">See All</a>

		<br>

		<%= render 'offers/index_table', offers: @offer_category.new_offers.where(:active => true).take(4) %>

	</section>

</div>




<section class="row offer-hero-index">

	<div class="col-xs-12 col-sm-6">

		<div class="hero-index-content">
			
			<%= link_to show_offer_formatted_path(offer.name_url_slug) do %>
				
				<img class="hero-image" src="https://s3.amazonaws.com/media.appsumo.com/cache/dc/7a/dc7af207d72d0f636a0b631e553de02f.jpg">

			<%end%>

			<br><br>

			<p class="centered"><%= image_tag 'twitter_cta.png', class:"social-media-button" %> <%= image_tag 'facebook_cta.png', class:"social-media-button" %> <%= image_tag 'instagram_cta.png', class:"social-media-button" %></p>

		</div>

	</div>

	<div class="col-xs-12 col-sm-6">

		<div class="hero-index-content">

			<header><%= offer.name %></header>

			<p>by The Creator</p>

			<p>Quick Sales Quip</p>

			<br>

			<%= link_to "Learn More", show_offer_formatted_path(offer.name_url_slug), class:"learn-more-cta" %>

		</div>

	</div>

</section>


<div class="offer-landing-page">

	<section class="row">

		<div class="col-xs-12 col-sm-6 offer-header-image">

			<%= image_tag @offer.image(:medium), class:"main-image" %>
			
			<br><br>

			<p class="centered">
				
				<a class="twitter popup" href="http://twitter.com/share?text=Check%20out%20<%= @offer.name %>%20on%20thatHQ%20&hashtags=buyblack&url=<%= request.base_url %><%= add_offer_to_order_path(@offer.name_url_slug) %>" target="blank"><%= image_tag 'twitter_icon.png', class:"social-media-button" %></a>
				<%# image_tag 'facebook_icon.png', class:"social-media-button" %> 
				<%# image_tag 'instagram_icon.png', class:"social-media-button" %>
			</p>

			<br>

			<p><%= @offer.name %></p>

			<p>by Creator</p>

			<br>

			<% unless @offer.affiliate %>
				
				<%= link_to "Buy Now", add_offer_to_order_path(@offer.name_url_slug), class:"offer-hero-cta full-screen-only" %>

			<%else%>

				<%= link_to "Buy Now", @offer.affiliate_link, class:"offer-hero-cta full-screen-only", target: :_blank %>

			<%end%>

		</div>

		<div class="col-xs-12 col-sm-6">

			<%= render 'offers/headline_and_article_content', offer: @offer %>

		</div>

	</section>

</div>

<%= render 'offers/offer_mobile_cta' %>


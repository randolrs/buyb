<div class="row">

	<div class="col-xs-12 col-sm-12 cc-form-row">
		
		<%= label_tag 'name-on-card', "Name on Card" %>
		<%= text_field_tag :name_on_card, nil, :required => true %>

	</div>

	<br>

	<div class="col-xs-12 col-sm-12 cc-form-row">

		<%= label_tag 'credit-card-number', "Credit Card Number" %>
		<%= text_field_tag :credit_card_number, nil, :required => true  %>

	</div>

	<br><br>

	<div class="col-xs-8 cc-form-row">

		<%= label_tag 'expiration-date', "Expiration Date" %>
		
		<ul class="horizontal">

			<li><select class="cc-select" name='expMonth' id='expireMM' required>
		    <option value=''>Month</option>
		    <option value='01'>01</option>
		    <option value='02'>02</option>
		    <option value='03'>03</option>
		    <option value='04'>04</option>
		    <option value='05'>05</option>
		    <option value='06'>06</option>
		    <option value='07'>07</option>
		    <option value='08'>08</option>
		    <option value='09'>09</option>
		    <option value='10'>10</option>
		    <option value='11'>11</option>
		    <option value='12'>12</option>
			</select></li>
			<li><select class="cc-select" name='expYear' id='expireYY'>
		    <option value=''>Year</option>
		    <option value='17'>2017</option>
		    <option value='18'>2018</option>
		    <option value='19'>2019</option>
		    <option value='20'>2020</option>
		    <option value='21'>2021</option>
		    <option value='22'>2022</option>
		    <option value='23'>2023</option>
			</select></li>

		</ul>

	</div>

	<div class="col-xs-4 cc-form-row">

		<%= label_tag 'cvc', "CVC" %>
		<%= text_field_tag :cvc, nil, required: true  %>

	</div>

</div>
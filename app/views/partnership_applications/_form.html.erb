<div class="form-card card">
  
  <h2 class="centered">Partnership Application</h2>

  <br>

  <%= form_for(partnership_application) do |f| %>
    <% if partnership_application.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(partnership_application.errors.count, "error") %> prohibited this partnership_application from being saved:</h2>

        <ul>
        <% partnership_application.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <label>Company Name</label>
      <%= f.text_field :company_name %>
    </div>

    <div class="field">
      <label>Company URL/website:</label>
      <%= f.text_field :company_url %>
    </div>

    <div class="field">
      <label>What does your company sell?</label>
      <%= f.text_area :company_description %>
    </div>

    <div class="field">
      <label>Your name</label>
      <%= f.text_field :contact_name %>
    </div>

    <div class="field">
      <label>Your title</label>
      <%= f.text_field :contact_title %>
    </div>

    <div class="field">
      <label>Your email</label>
      <%= f.text_field :contact_email %>
    </div>

    <div class="field">
      <label>Name of the product you want to create</label>
      <%= f.text_field :product_name %>
    </div>

    <div class="field">
      <label>Describe your product:</label>
      <%= f.text_field :product_description %>
    </div>

    <div class="field">
      <label>What makes your product great?</label>
      <%= f.text_field :product_why_is_great %>
    </div>

<!--     <div class="field">
      <%# f.label :customer_service_staff %>
      <%# f.check_box :customer_service_staff %>
    </div> -->

    <div class="actions">
      <%= f.submit "Submit Application", class:"button" %>
    </div>

  <% end %>

</div>
